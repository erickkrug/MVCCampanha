<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

<script>
    $(document).ready(function () {
        $('#btnEntrar').on('click', function () {
            var data = {
                Usuario: $('#usuario').val(),
                Senha: $('#senha').val()
            };

            $.ajax({
                url: 'Login/Login',
                method: 'GET',
                contentType: false,
                data: data,
                success: function (sucesso) {
                    window.location = '/Home/Index';
                },
                error: function (erro) {
                    // Tratamento de erro aqui, se necessário
                }
            });
        });
    });

</script>
